<h2>Novo Empréstimo</h2>

<form action="/loans" method="POST">

    <label for="userId">Usuário:</label>
    <select name="userId" id="userId" required>
        <option value="">Selecione um usuário</option>
        {{#each users}}
            <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
    </select>

    <label for="bookId">Livro:</label>
    <select name="bookId" id="bookId" required>
        <option value="">Selecione um livro</option>
        {{#each books}}
            <option value="{{this.id}}">{{this.title}} ({{this.available}} disponíveis)</option>
        {{/each}}
    </select>

    <label for="days">Dias de empréstimo:</label>
    <input type="number" id="days" name="days" min="1" value="7" required>

    <button type="submit">Confirmar Empréstimo</button>
</form>

<a href="/loans">Voltar para a lista</a>
