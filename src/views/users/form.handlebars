<h2>{{#if user.id}}Editar Usuário{{else}}Novo Usuário{{/if}}</h2>

<form action="{{#if user.id}}/users/{{user.id}}?_method=PUT{{else}}/users{{/if}}" method="POST">

    <label for="name">Nome:</label>
    <input 
        type="text" 
        id="name" 
        name="name" 
        value="{{user.name}}" 
        required
    >

    <label for="email">Email:</label>
    <input 
        type="email" 
        id="email" 
        name="email" 
        value="{{user.email}}" 
        required
    >

    <button type="submit">
        {{#if user.id}}Atualizar{{else}}Criar{{/if}}
    </button>
</form>

<a href="/users">Voltar para a lista</a>
