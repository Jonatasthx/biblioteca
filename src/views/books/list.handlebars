<h2>Lista de Livros</h2>

<a href="/books/new" class="btn">Adicionar Novo Livro</a>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Autor</th>
      <th>Categoria</th>
      <th>Editora</th>
      <th>Total</th>
      <th>Disponíveis</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    {{#each books}}
    <tr>
      <td>{{this.title}}</td>

      <td>
        {{#if this.Author}}
          {{this.Author.name}}
        {{else}}
          —
        {{/if}}
      </td>

      <td>
        {{#if this.Category}}
          {{this.Category.name}}
        {{else}}
          —
        {{/if}}
      </td>

      <td>
        {{#if this.Publisher}}
          {{this.Publisher.name}}
        {{else}}
          —
        {{/if}}
      </td>

      <td>{{this.total}}</td>
      <td>{{this.available}}</td>

      <td>
        <a href="/books/{{this.id}}/edit">Editar</a>
        <form action="/books/{{this.id}}?_method=DELETE" method="POST" style="display:inline">
          <button type="submit">Excluir</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
