<h2>Editar Livro</h2>

<form action="/books/{{book.id}}?_method=PUT" method="POST" class="form-container">
    
    <div class="form-group">
        <label for="title">Título</label>
        <input
            type="text"
            id="title"
            name="title"
            value="{{book.title}}"
            required
        >
    </div>

    <div class="form-group">
        <label for="author">Autor</label>
        <input
            type="text"
            id="author"
            name="author"
            value="{{book.author}}"
            required
        >
    </div>

    <div class="form-group">
        <label for="category">Categoria</label>
        <input
            type="text"
            id="category"
            name="category"
            value="{{book.category}}"
        >
    </div>

    <div class="form-group">
        <label for="year">Ano</label>
        <input
            type="number"
            id="year"
            name="year"
            value="{{book.year}}"
        >
    </div>

    <div class="form-group">
        <label for="publisher">Editora</label>
        <input
            type="text"
            id="publisher"
            name="publisher"
            value="{{book.publisher}}"
        >
    </div>

    <button type="submit" class="btn">Salvar Alterações</button>
</form>

<style>
    .form-container {
        max-width: 500px;
        margin: 20px auto;
        background: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px #00000022;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: 600;
    }

    input {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn {
        background-color: #2980b9;
        color: white;
        padding: 10px 15px;
        border: none;
        width: 100%;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

    .btn:hover {
        background-color: #1c6690;
    }
</style>
